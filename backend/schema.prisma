datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  jobs     Job[]  @relation("Job_author")
  password String
}

model Job {
  id                String      @id @default(cuid())
  name              String      @default("")
  publishedAt       DateTime?
  applicationDate   DateTime?
  status            String?     @default("waiting")
  author            User?       @relation("Job_author", fields: [authorId], references: [id])
  authorId          String?     @map("author")
  salaryExpectation Int?
  interviews        Interview[] @relation("Interview_jobAttach")

  @@index([authorId])
}

model Interview {
  id          String    @id @default(cuid())
  date        DateTime?
  type        String    @default("")
  jobAttach   Job?      @relation("Interview_jobAttach", fields: [jobAttachId], references: [id])
  jobAttachId String?   @map("jobAttach")

  @@index([jobAttachId])
}